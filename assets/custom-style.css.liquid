/*-------------------*/
/*-- custom-slider --*/
/*-------------------*/
.custom-slider__inner {
  width: 100%;
  position: relative;
}
.custom-slider__list {
  opacity: 0;
  width: 100%;
  margin: 0;
  padding-left: 0;
  transition: opacity 0.8s ease;
}
.custom-slider__list.slick-initialized {
  opacity: 1;
}
.custom-slider__item {
  width: 100%;
  position: relative;
}
.custom-slider__item::before {
  content: '';
  display: block;
  padding-top: 38em;  
}
.custom-slider__overlay {
  display: block;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #593b1c;
  opacity: 0.15;
}
.custom-slider__item img {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.custom-slider__box {
  position: absolute;
  width: 350px;
  padding: 0;
  text-align: left;
}
.custom-slider__logo {
  width: 100%;
  margin-bottom: 32px;
}
.custom-slider__logo img {
  position: relative;
  width: 100px;
  object-fit: contain;
}
.custom-slider__title {
  text-align: left;
  line-height: 2;
  margin-bottom: 32px;
  font-weight: bold;
  letter-spacing: 0.15em;
}
.custom-slider__button {
  max-width: 230px;
  width: 100%;
}
.custom-slider__button .c-button._white {
  background-color: #fff;
  border: none;
}
.custom-slider__button .c-button._white:hover {
  background-color: #593b1c;
}
.custom-slider__list .slick-dots {
  width: 10%;
  height: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  right: 8.8vw;
  top: 50%;
  transform: translateY(-50%);
}
.custom-slider__list .slick-dots li {
  margin-bottom: 8px;
}
.custom-slider__list .slick-dots li button:before {
  color: #fff;
  opacity: 0.6;
}
.custom-slider__list .slick-dots li.slick-active button:before {
