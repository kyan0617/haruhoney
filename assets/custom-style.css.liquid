/*------------------*/
/*-- reset Styles --*/
/*------------------*/
ul {
  margin: 0;
  padding: 0;
}
li {
  list-style-type: none;
}
a {
  text-decoration: none;
}
p {
  margin: 0;
  padding: 0;
}
h2 {
  margin: 0;
  padding: 0;
}

/*------------------*/
/*-- custom-title --*/
/*------------------*/
.custom-title {
  font-size: 36px;
  letter-spacing: 0.15em;
  margin: 0 0 25px;
  color: #593b1c;
  text-transform: uppercase;
}
.custom-title_sub {
  display: inline-block;
  font-size: 14px;
  letter-spacing: 0.15em;
  position: relative;
  color: #593b1c;
  padding: 0 8px;
  margin: 0;
}
.custom-title_sub::before,
.custom-title_sub::after {
  position: absolute;
  content: '';
  width: 4px;
  height: 1px;
  background-color: #593b1c;
  top: 50%;
  transform: translateY(-50%);
}
.custom-title_sub::before {
  left: 0;
}
.custom-title_sub::after {
  right: 0;
}
/*-------------------*/
/*-- custom-header --*/
/*-------------------*/
.header__container {
  display: flex;
}
.header__main {
  flex-grow: 1;
}
.header.page-width {
  max-width: 100%;
  margin: 0;
  padding-right: 22px;
}
.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
}
.header-bar__title {
  font-size: 12px;
  text-align: left;
  padding-left: 50px;
  color: #593b1c;
  letter-spacing: 0.15em;
  line-height: 3;
}
.header-bar__list {
  display: flex;
}
.header-bar__item a {
  font-size: 12px;
  line-height: 3.6;
  letter-spacing: 0.15em;
  padding: 0 18px;
  color: #593b1c;
  transition: opacity 0.3s ease;
}
.header-bar__item a:hover {
  opacity: 0.8;
}
.header-cart__container {
  max-width: 130px;
  width: 100%;
  background-color: #593b1c;
  transition: opacity 0.3s ease;
}
.header-cart__container:hover {
  opacity: 0.8;
}
.header-cart__container a {
  width: 100%;
  height: 100%;
  margin: 0 auto;
  flex-direction: column;
  text-decoration: none;
  cursor: pointer;
}
.header-cart__container a svg {
  margin-bottom: 6px;
  max-width: 50px;
  width: 100%;
  padding-right: 12px;
}
.header-cart__text {
  font-size: 12px;
  letter-spacing: 0.15em;
  color: #fff;
  text-align: center;
}
.header--middle-left {
  grid-template-columns: 1fr auto 1fr;
}
.header__menu-item span {
  color: #593b1c;
}
.header__heading {
  max-width: 240px;
  min-width: 180px;
  width: 100%;
}
.header__icons {
  width: 100%;
  justify-content: flex-end;
}
.header__icons .field .search__input {
  border-radius: 0;
  padding: 0;
}
.header__form {
  max-width: 210px;
  min-width: 200px;
  width: 100%;
  margin-right: 38px;
}
.header__form._sp-only {
  display: none;
  max-width: 20px;
  min-width: 20px;
  width: 100%;
}
.header__search .search__button {
  justify-content: flex-end;
}
.header__search .search {
  display: inline-block;
  width: 100%;
}
.header__input {
  border: none;
  border-radius: 0;
  box-shadow: none;
  border-bottom: 1px solid #593b1c;
}
.header__input.field__input:hover,
.header__input.field__input:focus {
  box-shadow: none;
}
.header__input::placeholder {
  font-size: 12px;
  color: #593b1c;
}
.header__search .field__label, .customer .field label {
  left: 0;
  font-size: 12px;
}
.header__search .field__input:focus~.field__label {
  top: -0.1em;
}
.header__my-page {
  min-width: 92px;
  margin-right: 30px;
}
.header__login {
  width: 100%;
  text-decoration: none;
}
.header__login svg {
  max-width: 16px;
  width: 100%;
  margin-right: 6px;
}
.header__login p {
  font-size: 12px;
  color: #593b1c;
}
.header__fav {
  min-width: 92px;
}
.header__fav span {
  display: none !important;
}
.header__fav a {
  display: flex;
  height: 100%;
  align-items: center;
  justify-content: flex-end;
}
.header__fav svg {
  max-width: 16px;
  width: 100%;
  margin-right: 6px;
}
.header__fav p {
  font-size: 12px;
  color: #593b1c;
}
@media screen and (max-width: 1620px) {
  .header.page-width {
    column-gap: 3rem;
  }
  .header__heading {
    grid-row: 1 / 3;
  }
  .header--middle-left {
    grid-template-columns: 180px auto 0;
  }
  .header__list {
    width: 100%;
    justify-content: flex-start;
  }
  .header__icons {
    grid-row: 2;
    grid-column: 2 / 3;
    justify-content: flex-start;
    margin-top: 3rem;
    padding-left: 12px;
  }
}
@media screen and (max-width: 1210px) {
  .header__heading {
    grid-row: 1 / 2;
  }
  .header--middle-left {
    grid-template-columns: auto;
  }
  .header__inline-menu {
    grid-row: 2 / 3;
    grid-column: 1 / 4;
  }
  .header__icons {
    grid-row: 3 / 4;
    grid-column: 1 / 3;
    margin-top: 0;
  }
}
@media screen and (max-width: 980px) {
  .header.page-width {
    column-gap: 0;
  }
  .header__icon-text._pc-only{
    display: none;
  }
  .header__fav {
    min-width: 20px;
  }
  .header__my-page {
    min-width: 20px;
    margin-right: 10px;
  }
  .header__search {
    margin-right: 6px;
  }
  .header--middle-left {
    grid-template-columns: auto auto 1fr;
  }
  .header-cart__container a svg {
    max-width: 42px;
  }
  .header__icons {
    grid-row: 1 / 2;
    grid-column: 3 / 4;
    justify-content: flex-end;
  }
}
@media screen and (max-width: 768px) {
  .header {
    padding-top: 2rem;
  }
  .header-bar__item a {
    padding: 0 6px;
  }
  .header-bar {
    display: none;
  }
  .header__form {
    margin-right: 20px;
  }
  .header-cart__container a {
    padding: 20px 0 12px;
  }
  .header-wrapper--border-bottom {
    border-bottom: none;
  }
  .header__form._pc-only {
    display: none;
  }
  .header__form._sp-only {
    display: block;
  }
  .header__icons .field .search__input {
    padding: 0.45em;
  }
  .header__search .field__input:focus {
    padding: 1.45em 15px 0.45em;
  }
  .header__search .field__label {
    top: 1.4rem;
    left: 15px
  }
  .header__search .search__button {
    padding-right: 15px;
  }
  .header__search .field__input:focus~.field__label {
    top: 0.4em;
  }
}
@media screen and (max-width: 540px) {
  .header.page-width {
    padding-right: 10px;
  }
  .header-cart__container {
    max-width: 80px;
    width: 100%;
  }
  .header__my-page {
    max-width: 0;
    min-width: 0;
    width: 0;
  }
  .header__heading {
    max-width: 180px;
    min-width: 120px;
    width: 100%;
  }
  .header__heading a {
    padding: 0.75rem 0;
  }
  .header-cart__container a svg {
    max-width: 24px;
    padding-right: 6px;
  }
  .header-cart__text {
    font-size: 10px;
  }
}
